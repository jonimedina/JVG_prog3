<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class catalog="deposito" name="Modelo.RetiroHerramienta" optimistic-lock="version" table="retiroHerramientas">
        <id name="idRetiroHerramienta" type="java.lang.Integer">
            <column name="IdRetiroHerramienta"/>
            <generator class="identity"/>
        </id>
        
        <property name="responsable" type="string">
            <column length="30" name="Responsable" not-null="true"/>
        </property>
        
        <property name="idDocente" type="java.lang.Integer">
            <column length="10" name="IdDocente" not-null="true"/>
        </property>
        
        <property name="idHerramienta" type="java.lang.Integer">
            <column length="10" name="IdHerramienta" not-null="true"/>
        </property>

        <property name="fechaRetiro" type="date">
            <column length="10" name="fechaRetiro" not-null="true"/>
        </property>
        
        </class>
</hibernate-mapping>