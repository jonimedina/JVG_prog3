<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class catalog="deposito" name="Modelo.Material" optimistic-lock="version" table="materiales">
        <id name="idMaterial" type="java.lang.Integer">
            <column name="IdMaterial"/>
            <generator class="identity"/>
        </id>
        
        <property name="materiaPrima" type="string">
            <column length="30" name="MateriaPrima" not-null="true"/>
        </property>
        
        <property name="tipo" type="string">
            <column length="30" name="Tipo" not-null="true"/>
        </property>
        
        <property name="medida" type="string">
            <column length="30" name="Medida" not-null="true"/>
        </property>

        <property name="stock" type="java.lang.Integer">
            <column length="3" name="Stock" not-null="true"/>
        </property>
        
        </class>
</hibernate-mapping>